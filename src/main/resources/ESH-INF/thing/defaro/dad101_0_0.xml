<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="zwave"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
  xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0
                      https://openhab.org/schemas/thing-description/v1.0.0">

  <thing-type id="defaro_dad101_00_000" listed="false">
    <label>DAD-101 Dimmer with sensors support</label>
    <description>Dimmer with sensors support&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gtOne channel dimmer with ability to add different sensors to it.&lt;/p&gt &lt;br /&gt&lt;h2&gtInclusion Information&lt;/h2&gt&lt;ol&gt&lt;li&gtPut controller in inclusion mode.&lt;/li&gt &lt;li&gtPower on device. It should be added automatically (using NWI).&lt;/li&gt &lt;li&gtIf not fast press add/remove button three times.&lt;/li&gt &lt;/ol&gt&lt;br /&gt&lt;h2&gtExclusion Information&lt;/h2&gt&lt;ol&gt&lt;li&gtPut controller in exclusion mode.&lt;/li&gt &lt;li&gtFast press add/remove button three times.&lt;/li&gt &lt;/ol&gt&lt;br /&gt&lt;h2&gtWakeup Information&lt;/h2&gt&lt;p&gtAlways listening&lt;/p&gt</description>
    <category>WallSwitch</category>

    <!-- CHANNEL DEFINITIONS -->
    <channels>
      <channel id="switch_dimmer" typeId="switch_dimmer">
        <label>Dimmer</label>
        <properties>
          <property name="binding:*:PercentType">COMMAND_CLASS_SWITCH_MULTILEVEL,COMMAND_CLASS_BASIC</property>
          <property name="binding:Command:OnOffType">COMMAND_CLASS_SWITCH_MULTILEVEL</property>
        </properties>
      </channel>
      <channel id="sensor_power" typeId="sensor_power">
        <label>Sensor (power)</label>
        <properties>
          <property name="binding:*:DecimalType">COMMAND_CLASS_SENSOR_MULTILEVEL;type=POWER</property>
        </properties>
      </channel>
      <channel id="switch_dimmer1" typeId="switch_dimmer">
        <label>Dimmer</label>
        <properties>
          <property name="binding:*:PercentType">COMMAND_CLASS_SWITCH_MULTILEVEL:1,COMMAND_CLASS_BASIC:1</property>
          <property name="binding:Command:OnOffType">COMMAND_CLASS_SWITCH_MULTILEVEL:1</property>
        </properties>
      </channel>
    </channels>

    <!-- DEVICE PROPERTY DEFINITIONS -->
    <properties>
      <property name="vendor">Defaro</property>
      <property name="modelId">DAD-101</property>
      <property name="manufacturerId">032E</property>
      <property name="manufacturerRef">0060:0031</property>
      <property name="dbReference">833</property>
      <property name="defaultAssociations">1</property>
    </properties>

    <!-- CONFIGURATION DESCRIPTIONS -->
    <config-description>

      <!-- GROUP DEFINITIONS -->
      <parameter-group name="configuration">
        <context>setup</context>
        <label>Configuration Parameters</label>
      </parameter-group>

      <parameter-group name="association">
        <context>link</context>
        <label>Association Groups</label>
      </parameter-group>

      <!-- PARAMETER DEFINITIONS -->
      <parameter name="config_1_1" type="integer" groupName="configuration">
        <label>1: Load type</label>
        <description>Dimmer load type</description>
        <default>3</default>
        <options>
          <option value="0">Normal lamps</option>
          <option value="1">Induction low volt halogen lamps</option>
          <option value="2">Electronic low volt halogen lamps</option>
          <option value="3">LED 220V lamps</option>
          <option value="4">Non-dimmable lamps</option>
        </options>
      </parameter>

      <parameter name="config_2_1" type="integer" groupName="configuration"
                 min="1" max="94">
        <label>2: Min dimming level</label>
        <default>1</default>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_3_1" type="integer" groupName="configuration"
                 min="6" max="99">
        <label>3: Max dimming level</label>
        <default>99</default>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_4_1" type="integer" groupName="configuration"
                 min="0" max="120">
        <label>4: Dimming speed</label>
        <description>Dimming speed&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtDimming speed in seconds (0 - instantly) &amp;lt;strong&amp;amp;gtWARNING&amp;lt;/strong&amp;amp;gt - 0 does not work correctly, it leaves 11-15V AC on the terminals. Use 1 instead!&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>5</default>
        <options>
          <option value="0">Disable</option>
          <option value="1">Fastest</option>
        </options>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_5_2" type="integer" groupName="configuration"
                 min="0" max="650">
        <label>5: Auto Off delay</label>
        <description>Delay to turn device OFF after ON command received&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtSets time after which dimmer will turn off after receiving ON command in 1 sec. (0 - disable feature)&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Disable</option>
        </options>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_6_1" type="integer" groupName="configuration"
                 min="0" max="3">
        <label>6: All ON/OFF behaviour</label>
        <description>All ON/OFF behaviour&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gt0 - React on All ON/All OFF&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt1 - Ignore All ON/All OFF&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt2 - Ignore All ON/React on All OFF&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt3 - React on All ON/Ignore All OFF&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_7_1" type="integer" groupName="configuration">
        <label>7: Powerfail recovery</label>
        <description>Powerfail recovery mode</description>
        <default>0</default>
        <options>
          <option value="0">Restore previous state</option>
          <option value="1">Always set to OFF state</option>
        </options>
      </parameter>

      <parameter name="config_8_1" type="integer" groupName="configuration">
        <label>8: Lighting autolevel</label>
        <description>Autolevel behavior</description>
        <default>0</default>
        <options>
          <option value="0">Off</option>
          <option value="1">On</option>
          <option value="2">Use with motion sensor</option>
        </options>
        <advanced>true</advanced>
      </parameter>

      <parameter name="config_9_2" type="integer" groupName="configuration"
                 min="0" max="4000">
        <label>9: Light level</label>
        <description>Light level to maintain&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtIn lumens&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>150</default>
        <options>
          <option value="150">Default</option>
        </options>
        <advanced>true</advanced>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_10_2" type="integer" groupName="configuration"
                 min="1" max="300">
        <label>10: Lighting change trigger threshold</label>
        <description>Lighting change trigger threshold&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtIn lumens&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>10</default>
        <options>
          <option value="1">Min</option>
          <option value="10">Default</option>
          <option value="300">Max</option>
        </options>
        <advanced>true</advanced>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_12_2" type="integer" groupName="configuration"
                 min="0" max="1800">
        <label>12: Turn on delay</label>
        <description>Sets turn on delay&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtIn seconds&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Disable</option>
        </options>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_13_2" type="integer" groupName="configuration"
                 min="0" max="1800">
        <label>13: Smart delay for dimmer</label>
        <description>Smart delay for dimmer&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtIn seconds (see Parameter 14)&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Disable</option>
        </options>
        <advanced>true</advanced>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_14_1" type="integer" groupName="configuration"
                 min="0" max="2">
        <label>14: Smart delay mode</label>
        <description>Smart delay mode&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtDAD-101&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt0 - implicit smart delay&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt1 - use smart delay for all devices NOT in Group 1. Also smart delay ignored for controller and button issued commands&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt2 - use smart delay for all devices IN Group 1. Also smart delay will be used for controller and button issued commands&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <advanced>true</advanced>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_15_2" type="integer" groupName="configuration"
                 min="0" max="5000">
        <label>15: Load in Watts</label>
        <description>Lamps load in Watts</description>
        <default>0</default>
        <options>
          <option value="0">Disable</option>
        </options>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_16_1" type="integer" groupName="configuration">
        <label>16: S1 button mode</label>
        <description>S1 button operation mode&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtType of button connected to switch&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Monostable (push button)</option>
          <option value="1">Bistable (switch)</option>
          <option value="2">Bistable (fixed switch)</option>
          <option value="3">Bistable (reversed fixed switch)</option>
          <option value="4">Two monostable switches</option>
        </options>
      </parameter>

      <parameter name="config_17_1" type="integer" groupName="configuration">
        <label>17: S2 button mode</label>
        <description>S2 button operation mode&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtType of button connected to S2 switch&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Monostable (push button)</option>
          <option value="1">Bistable (switch button)</option>
          <option value="2">Bistable (fixed switch button)</option>
          <option value="3">Bistable (reversed fixed switch)</option>
        </options>
      </parameter>

      <parameter name="config_18_1" type="integer" groupName="configuration">
        <label>18: Double click to max</label>
        <description>Level up to max on double click</description>
        <default>1</default>
        <options>
          <option value="0">Ignore double click</option>
          <option value="1">Double click sets 100%</option>
        </options>
      </parameter>

      <parameter name="config_21_1" type="integer" groupName="configuration">
        <label>21: Sensor driven dimmer</label>
        <description>Sets sensor for dimmer control&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gt0 - off&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt1 - sensor 1&amp;lt;/p&amp;amp;gt &amp;lt;p&amp;amp;gt2 - sensor 2&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Off</option>
          <option value="1">Sensor 1</option>
          <option value="2">Sensor 2</option>
        </options>
        <advanced>true</advanced>
      </parameter>

      <parameter name="config_22_2" type="integer" groupName="configuration"
                 min="-60" max="1000">
        <label>22: Sensor 1 ON command value</label>
        <description>Sensor 1 ON command value&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtCommands send to AG 6&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <options>
          <option value="0">Disabled</option>
          <option value="1000">Max</option>
        </options>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_23_2" type="integer" groupName="configuration"
                 min="-60" max="1000">
        <label>23: Sensor 1 command OFF value</label>
        <description>Value to activate OFF command for Sensor 1&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtFor AG 6&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <parameter name="config_24_1" type="integer" groupName="configuration"
                 min="0" max="6">
        <label>24: Sensor 1 ON/OFF command behavior</label>
        <description>Behavior for ON/OFF command&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtPlease see docs&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <limitToOptions>false</limitToOptions>
      </parameter>

      <!-- ASSOCIATION DEFINITIONS -->
      <parameter name="group_1" type="text" groupName="association">
        <label>1: Lifeline</label>
        <description>State changes</description>
      </parameter>

      <parameter name="group_2" type="text" groupName="association" multiple="true">
        <label>2: Switch 1</label>
        <description>Switch 1 ON/OFF associations</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <parameter name="group_3" type="text" groupName="association" multiple="true">
        <label>3: Switch1 dimmer</label>
        <description>Dimmer status group for S1</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <parameter name="group_4" type="text" groupName="association" multiple="true">
        <label>4: Switch 2</label>
        <description>Switch 2 ON/OFF associations</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <parameter name="group_5" type="text" groupName="association" multiple="true">
        <label>5: Switch 2 dimmer</label>
        <description>Dimmer status group for S2</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <parameter name="group_6" type="text" groupName="association" multiple="true">
        <label>6: Sensor 1</label>
        <description>Group for Sensor 1 states</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <parameter name="group_7" type="text" groupName="association" multiple="true">
        <label>7: Sensor 2</label>
        <description>Group for Sensor 2 states</description>
        <multipleLimit>10</multipleLimit>
      </parameter>

      <!-- STATIC DEFINITIONS -->
      <parameter name="node_id" type="integer" min="1" max="232" readOnly="true" required="true">
        <label>Node ID</label>
        <advanced>true</advanced>
      </parameter>

    </config-description>

  </thing-type>

</thing:thing-descriptions>
