  <thing-type id="ufairy_curtainmotor_00_000" listed="false">
    <label>JTB-1007 Curtain motor</label>
    <description>Curtain motor&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gtJTB-1007 is a Z-Wave enabled curtain motor.&lt;/p&gt &lt;br /&gt&lt;h2&gtInclusion Information&lt;/h2&gt&lt;p&gtClick the PB-button once, located near by motor power socket.&lt;/p&gt &lt;br /&gt&lt;h2&gtExclusion Information&lt;/h2&gt&lt;p&gtClick the PB-button once, located near by motor power socket.&lt;/p&gt</description>
    <category>Blinds</category>

    <!-- CHANNEL DEFINITIONS -->
    <channels>
      <channel id="blinds_control" typeId="blinds_control">
        <label>Blinds Control</label>
        <properties>
          <property name="binding:*:PercentType">COMMAND_CLASS_SWITCH_MULTILEVEL</property>
          <property name="binding:Command:StopMoveType">COMMAND_CLASS_SWITCH_MULTILEVEL</property>
          <property name="binding:Command:UpDownType">COMMAND_CLASS_SWITCH_MULTILEVEL</property>
        </properties>
      </channel>
    </channels>

    <!-- DEVICE PROPERTY DEFINITIONS -->
    <properties>
      <property name="vendor">UFairy G.R. Tech</property>
      <property name="modelId">JTB-1007</property>
      <property name="manufacturerId">0152</property>
      <property name="manufacturerRef">0B00:0001</property>
      <property name="dbReference">1247</property>
      <property name="defaultAssociations">1</property>
    </properties>

    <!-- CONFIGURATION DESCRIPTIONS -->
    <config-description>

      <!-- GROUP DEFINITIONS -->
      <parameter-group name="configuration">
        <context>setup</context>
        <label>Configuration Parameters</label>
      </parameter-group>

      <parameter-group name="association">
        <context>link</context>
        <label>Association Groups</label>
      </parameter-group>

      <!-- PARAMETER DEFINITIONS -->
      <parameter name="config_17_4_wo" type="integer" groupName="configuration">
        <label>17: Motor Open, Go to Direction B</label>
        <description>Motor Open, Go to Direction B&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;p&amp;amp;gtSet only, any value possible&amp;lt;/p&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
      </parameter>

      <parameter name="config_18_4_wo" type="integer" groupName="configuration">
        <label>18: Motor Stop</label>
        <description>Motor Stop</description>
        <default>0</default>
      </parameter>

      <parameter name="config_19_4_wo" type="integer" groupName="configuration">
        <label>19: Motor Close, Go to Direction A</label>
        <description>Motor Close, Go to Direction A</description>
        <default>0</default>
      </parameter>

      <parameter name="config_20_2" type="integer" groupName="configuration" readOnly="true"
                 min="0" max="99">
        <label>20: Motor Position</label>
        <description>Return motor current position</description>
        <default>0</default>
      </parameter>

      <parameter name="config_22_4_wo" type="integer" groupName="configuration">
        <label>22: Motor revert direction</label>
        <description>Motor revert direction</description>
        <default>0</default>
      </parameter>

      <parameter name="config_23_1_wo" type="integer" groupName="configuration">
        <label>23: Clear motor lead tail endpoint setting</label>
        <description>Clear motor lead tail endpoint setting</description>
        <default>0</default>
      </parameter>

      <parameter name="config_32_1" type="integer" groupName="configuration" readOnly="true"
                 min="0" max="255">
        <label>32: Return motor status flag</label>
        <description>Return motor status flag&lt;br /&gt&lt;h1&gtOverview&lt;/h1&gt&lt;p&gt&amp;lt;table&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt0&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gtmotor is closing, go to direction A&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt1&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gtmotor is opening, go to direction B&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt2&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gtmotor endpoint A has setting&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt3&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gtmotor endpoint B has setting&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt4&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt(Reserved)&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt5&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt(Reserved)&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt6&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt(Reserved)&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;tr&amp;amp;gt&amp;lt;td&amp;amp;gt7&amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gt  -&amp;amp;gt;  &amp;lt;/td&amp;amp;gt &amp;lt;td&amp;amp;gtdirection revert&amp;lt;/td&amp;amp;gt &amp;lt;/tr&amp;amp;gt&amp;lt;/table&amp;amp;gt&lt;/p&gt</description>
        <default>0</default>
        <advanced>true</advanced>
      </parameter>

      <parameter name="config_33_4_wo" type="integer" groupName="configuration">
        <label>33: Enable manual pulling function</label>
        <description>Enable manual pulling function</description>
        <default>0</default>
      </parameter>

      <parameter name="config_34_4_wo" type="integer" groupName="configuration">
        <label>34: Disable manual pulling function</label>
        <description>Disable manual pulling function</description>
        <default>0</default>
      </parameter>

      <!-- ASSOCIATION DEFINITIONS -->
      <parameter name="group_1" type="text" groupName="association" multiple="true">
        <label>1: Lifeline</label>
        <description>lifeline group</description>
        <multipleLimit>5</multipleLimit>
      </parameter>

      <!-- STATIC DEFINITIONS -->
      <parameter name="node_id" type="integer" min="1" max="232" readOnly="true" required="true">
        <label>Node ID</label>
        <advanced>true</advanced>
      </parameter>

    </config-description>

  </thing-type>

</thing:thing-descriptions>
