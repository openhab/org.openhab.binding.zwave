      <!-- PARAMETER DEFINITIONS -->
      <parameter name="config_1_1" type="integer" groupName="configuration"
                 min="0" max="2">
        <label>1: LED Setting</label>
        <description><![CDATA[
This parameter is used to change the reaction of LED setting.<br /> <h1>Overview</h1><p><br /></p>
        ]]></description>
        <default>2</default>
