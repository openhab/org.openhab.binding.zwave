    <!-- CONFIGURATION DESCRIPTIONS -->
    <config-description>

      <!-- PARAMETER DEFINITIONS -->
      <parameter-group name="configuration">
        <context>setup</context>
        <label>Configuration Parameters</label>
      </parameter-group>

      <parameter name="config_0_1" type="integer" groupName="configuration">
        <label>0: Gas Metering</label>
        <description>Enable and disable gas metering</description>
        <default>1</default>
        <options>
          <option value="0">disable gas metering</option>
          <option value="1">enable gas metering</option>
        </options>
      </parameter>

      <parameter name="config_1_2" type="integer" groupName="configuration"
                 min="0" max="65535">
        <label>1: Gas Meter resolution</label>
        <description><![CDATA[
The resolution of the analog gas meter<br /><h1>Overview</h1><p>The resolution of the analog gas meter (revolutions per mÂ³) in unsigned Q14.2 notation.</p>
        ]]></description>
