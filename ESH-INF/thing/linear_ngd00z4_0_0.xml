        <properties>
          <property name="binding:*:OnOffType">COMMAND_CLASS_ALARM;type=0x06, event=64</property>
        </properties>
      </channel>
      <channel id="alarm_system" typeId="alarm_system">
        <label>Motor Force Exceeded Alert</label>
        <properties>
          <property name="binding:*:OnOffType">COMMAND_CLASS_ALARM;type=0x06, event=65</property>
